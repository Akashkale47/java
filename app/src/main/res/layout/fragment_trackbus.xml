<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="8dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:background="@drawable/bus3">



    <android.support.v7.widget.CardView
        android:layout_marginTop="64dp"
        android:background="@color/colorPrimaryDark"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvSetlocation"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        card_view:cardCornerRadius="4dp">

        <Spinner
            android:id="@+id/onsetLocation"
            android:layout_width="380dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/City"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinnerlayout"
            android:layout_height="46dp"
            android:paddingStart="8dp"
            android:layout_marginStart="10dp" />
        <Spinner
            android:id="@+id/ondeslocation"
            android:layout_width="380dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/City2"
            android:layout_marginTop="70dp"
            android:background="@drawable/spinnerlayout"
            android:layout_height="46dp"
            android:paddingStart="8dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </android.support.v7.widget.CardView>

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/setLocation"
            android:text=""
            android:layout_width="140dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" />

        <ImageButton
            android:id="@+id/Swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swap_horiz_black_24dp"
            android:layout_marginLeft="40dp"
            android:background="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_marginStart="190dp"
            />

        <TextView
            android:id="@+id/setDestinationView"
            android:text=""
            android:layout_width="140dp"
            android:layout_marginLeft="260dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            />


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btFind"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:text="Find bus"
        android:background="@drawable/rounderspinner"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/ccBus"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:layout_gravity="start"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/tvlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:text="@string/railway_station_to_naubat_darwaza"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/gray"
            android:layout_marginTop="45dp"
            android:layout_marginRight="5dp"
            android:text="Stops:5"
            />

    </android.support.v7.widget.CardView>




</LinearLayout>